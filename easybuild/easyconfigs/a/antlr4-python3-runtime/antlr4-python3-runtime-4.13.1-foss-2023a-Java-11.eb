easyblock = 'PythonPackage'

name = 'antlr4-python3-runtime'
version = '4.13.1'
versionsuffix = '-Java-%(javaver)s'

homepage = 'https://www.antlr.org/'
description = """ANTLR (ANother Tool for Language Recognition) is a powerful parser
 generator for reading, processing, executing, or translating structured text or
 binary files. It's widely used to build languages, tools, and frameworks. From a
 grammar, ANTLR generates a parser that can build and walk parse trees."""

toolchain = {'name': 'foss', 'version': '2023a'}

options = {
    'modulename': False,
}

source_urls = [PYPI_SOURCE]
sources = [SOURCELOWER_TAR_GZ]
checksums = ['3cd282f5ea7cfb841537fe01f143350fdb1c0b1ce7981443a2fa8513fddb6d1a']

builddependencies = [
    ('Java', '11', '', SYSTEM),
]

dependencies = [
    ('Python', '3.11.3'),
]


download_dep_fail = True
use_pip = True
sanity_pip_check = True

moduleclass = 'tools'
